<div class="container mt-3">
    <div class="jumbotron">
        <h1 style="color: blue">Agregar producto</h1>
        <br />
        <form onsubmit="addProduct()">
        <div class="form-group">
            <label for="title"><b>Titulo</b></label>
            <input id="title" class="form-control" type="text" name="title" />
        </div>
        
        <div class="form-group">
            <label for="price"><b>Precio</b></label>
            <input id="price" class="form-control" type="text" name="price" />
        </div>
        
        <div class="form-group">
            <label for="thumbnail"><b>Imagen</b></label>
            <input
            id="thumbnail"
            class="form-control"
            type="text"
            name="thumbnail"
            />
        </div>
        
        <button class="btn btn-success mt-3 mb-5">Enviar</button>
        </form>
        
        <h2 style="color: red">Historial</h2>
        <% if(productos.length > 0){ %>
        
        <div class="table-responsive" id="productsMain">
        <table class="table table-dark" id="tableProducts">
            <thead>
            <tr style="color: green"><th>Titulo</th><th>Precio</th><th>Imagen</th></tr>
            <% for (const producto of productos) {%>
                <tr>
                    <td><%=producto.title%></td>
                    <td><img src= '<%= producto.thumbnail %>' alt="productImage"></td>
                    <td><%=producto.price%></td>
                </tr>
                <%};%>
            </thead>
            <tbody id="bodyProducts"></tbody>
        </table>
        </div>
        <% } else{ %>
            <h3 class="alert alert-danger">No se encontraron productos</h3>
        <% } %>
    </div>
    <div class="jumbotron">
        <h1 style="color: brown">Message Center</h1>
        <br />
        <form onsubmit="return sendMessage()">
        <div class="form-group">
            <label for="email"><b>Email</b></label>
            <input id="email" class="form-control" type="text" name="email" />
        </div>
        
        <div id="messagesMain">Mensajes</div>
        
        <div class="form-group">
            <input id="message" class="form-control" type="text" name="message" />
        </div>
        
        <button class="btn btn-success mt-3 mb-5">Enviar</button>
        </form>
    </div>
    </div>