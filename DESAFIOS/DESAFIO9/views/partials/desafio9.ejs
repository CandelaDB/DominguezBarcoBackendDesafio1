<div class="container mt-3">
    <div class="jumbotron">
        <h1 style="color: blue">Agregar producto</h1>
        <br />
        <form action="/productos" method="post">
        <div class="form-group">
            <label for="nombre"><b>Nombre</b></label>
            <input id="nombre" class="form-control" type="text" name="nombre" />
        </div>
        
        <div class="form-group">
            <label for="price"><b>Precio</b></label>
            <input id="price" class="form-control" type="text" name="price" />
        </div>
        
        <div class="form-group">
            <label for="foto"><b>Foto</b></label>
            <input id="foto"class="form-control" type="text" name="foto"/>
        </div>
        <div class="form-group">
            <label for="stock"><b>Stock</b></label>
            <input id="stock" class="form-control" type="number" name="stock" />
        </div>
        <div class="form-group">
            <label for="codigo"><b>Codigo</b></label>
            <input id="codigo" class="form-control" type="text" name="codigo" />
        </div>
        <div class="form-group">
            <label for="descripcion"><b>Descripcion</b></label>
            <input id="descripcion" class="form-control" type="text" name="descripcion" />
        </div>
        <button class="btn btn-success mt-3 mb-5">Enviar</button>
        </form>
        
        <h2 style="color: red">Historial</h2>
        <% if(productos.length > 0){ %>
        
        <div class="table-responsive" id="productsMain">
        <table class="table table-dark" id="tableProducts">
            <thead>
            <tr style="color: green"><th>Nombre</th><th>Precio</th> <th>Descripcion</th><th>Codigo</th><th>Stock</th><th>Foto</th></tr>
            <% for (const producto of productos) {%>
                <tr>
                    <td><%=producto.nombre%></td>
                    <td><img src= '<%= producto.foto %>' alt="productImage"></td>
                    <td><%=producto.price%></td>
                </tr>
                <%};%>
            </thead>
            <tbody id="bodyProducts"></tbody>
        </table>
        </div>
        <% } else{ %>
            <h3 class="alert alert-danger">No se encontraron productos</h3>
        <% } %>
    </div>
    <div class="jumbotron">
        <h1 style="color: brown">Message Center</h1>
        <br />
        <form onsubmit="return sendMessage()">
        <div class="form-group">
            <label for="email"><b>Email</b></label>
            <input id="email" class="form-control" type="text" name="email" />
        </div>
        <div class="form-group">
            <label for="nombreChat"><b>Nombre</b></label>
            <input id="nombreChat" class="form-control" type="text" name="nombreChat" />
        </div>
        <div class="form-group">
            <label for="apellido"><b>Apellido</b></label>
            <input id="apellido" class="form-control" type="text" name="apellido" />
        </div>
        <div class="form-group">
            <label for="alias"><b>Alias</b></label>
            <input id="alias" class="form-control" type="text" name="alias" />
        </div>
        <div class="form-group">
            <label for="avatar"><b>Avatar</b></label>
            <input id="avatar" class="form-control" type="text" name="avatar" />
        </div>
        <div class="form-group">
            <label for="edad"><b>Edad</b></label>
            <input id="edad" class="form-control" type="number" name="edad" />
        </div>
        <div id="messagesMain">Mensaje</div>
        <div class="form-group">
            <input id="text" class="form-control" type="text" name="text" />
        </div>
        
        <button class="btn btn-success mt-3 mb-5">Enviar</button>
        </form>
    </div>
    </div>