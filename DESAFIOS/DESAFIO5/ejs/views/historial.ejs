<h2 style="color:crimson;">Historial</h2>

<% if(productos.length > 0){ %>
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;"> <th>Titulo</th> <th>Imagen</th> <th>Precio</th> </tr>
            <% for (const producto of productos) {%>
            <tr>
                <td><%=producto.title%></td>
                <td><img src= '<%= producto.thumbnail %>' alt="productImage"></td>
                <td><%=producto.price%></td>
            </tr>
            <%};%>
        </table>
    </div>
<% } else{ %>
    <h3 class="alert alert-danger">No se encontraron productos</h3>
<% } %>