extends index.pug 

block  productos 

h2=title 
- if(exist) {
    .catalog 
    table 
    tr 
            th Titulo  
            th Precio 
            th Imagen 
        -
            let lista =list 
            each item in lista 
            tr 
                th!=item.title
                th!=item.price 
                td 
                    img(src!=item.thumbnail)
        
        br
        a.addButton(href="http://localhost:8080/") Subir m&aacute;s productos al stock 
        - } else {
            h2 No hay productos en stock.
            a.addButton(href="http://localhost:8080/") Agregar productos 
            - }
        br